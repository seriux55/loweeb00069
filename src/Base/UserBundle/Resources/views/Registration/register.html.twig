{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_errors(form) }}
    <div class="forma">
        {{ form_label(form.gender, " ") }}
        {{ form_errors(form.gender) }}
        {{ form_widget(form.gender) }}
    </div>
    <div class="forma">
        {{ form_label(form.firstname, "Nom") }}
        {{ form_errors(form.firstname) }}
        {{ form_widget(form.firstname, { 'attr' : { 'class' : 'forput' } }) }}
    </div>
    <div class="forma">
        {{ form_label(form.secondename, "Prénom") }}
        {{ form_errors(form.secondename) }}
        {{ form_widget(form.secondename, { 'attr' : { 'class' : 'forput' } }) }}
    </div>
    <div class="forma">
        {{ form_label(form.born, "Année de naissance") }}
        {{ form_errors(form.born) }}
        {{ form_widget(form.born, { 'attr' : { 'class' : 'forput' } }) }}
    </div>
    <div class="forma">
        {{ form_label(form.phone, "Téléphone") }}
        {{ form_errors(form.phone) }}
        {{ form_widget(form.phone, { 'attr' : { 'class' : 'forput' } }) }}
    </div>
    <div class="forma">
        {{ form_label(form.email, "Adresse mail") }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, { 'attr' : { 'class' : 'forput' } }) }}
    </div>
    <div class="forma">
        {{ form_label(form.plainPassword.first, "Mot de passe ") }}
        {{ form_errors(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first, { 'attr' : { 'class' : 'forput' } }) }}
    </div>
    <div class="forma">
        {{ form_label(form.plainPassword.second, "Confirmez le mot de passe ") }}
        {{ form_errors(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second, { 'attr' : { 'class' : 'forput' } }) }}
    </div>   
    {{ form_rest(form) }}
    <div class="forma">
        <input class="forbo" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>
